@model PTemplate.Data.DataBase.Menugroup
@using Microsoft.AspNetCore.Identity
@using PTemplate
@namespace PTemplate
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ساخت زیر گروه";
   Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ساخت</h1>

<h4>منو</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="~/Admin/Menugroups/Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                نام
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                توضیح
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                (تجاری)غیر فعال (پست)/   فعال
                @Html.CheckBox("istype", true)

            </div>
            <div class="form-group">
                فعال
                @Html.CheckBox("isactive", true)

            </div>


            <div class="form-group">
                <input type="submit" value="ساخت" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a href="~/Admin/Menugroups/Index">برگشت</a>
</div>

