@model PTemplate.Data.DataBase.Menu
@using Microsoft.AspNetCore.Identity
@using PTemplate
@namespace PTemplate
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
   Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>حذف زیر گروه</h1>

<h3>ایا مایل به اطلاعات می باشید?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            عنوان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            توضیح
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            زیر گروه
        </dt>
        <dd>
            @if (Model.Isactive != null)
                @if ((Boolean)Model.Isactive)
                {
                    <span>فعال</span>
                    <img src="~/images/icons8-green.png" />
                }
                else
                {
                    <span>  غیر فعال</span>
                    <img src="~/images/icons8-silver.png" />
                }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdmenugroupNavigation.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a href="~/Admin/Menus/Index">برگشت</a>
    </form>
</div>
