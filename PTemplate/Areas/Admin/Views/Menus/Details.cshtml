@model PTemplate.Data.DataBase.Menu
@using Microsoft.AspNetCore.Identity
@using PTemplate
@namespace PTemplate
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "جزئیات منو";
   Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>جزئیات</h1>

<div>
    <h4>منو</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            توضیح
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            گروه منو
        </dt>
        <dd>
            @if (Model.Isactive != null)
                @if ((Boolean)Model.Isactive)
                {
                    <span>فعال</span>
                    <img src="~/images/icons8-green.png" />
                }
                else
                {
                    <span>  غیر فعال</span>
                    <img src="~/images/icons8-silver.png" />
                }
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdmenugroupNavigation.Name)
        </dd>
    </dl>
</div>
<div>
    <a href="~/Admin/Menus/Edit/@Model.Id">ویرایش</a> |
    <a href="~/Admin/Menus/Index">برگشت</a>
</div>
