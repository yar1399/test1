@model PTemplate.Data.DataBase.Postdatum

@using PTemplate.Models
@using Microsoft.AspNetCore.Identity
@using PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "اطلاعات محتوا";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>جزئیات</h2>

<div>
    <h4>محتوای پست</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pathdata)
        </dt>
        <dd>

            @if (Model.Iddatatype == (byte)PTemplate.Models.Enum.PostDatatypes.image ||
Model.Iddatatype == (byte)PTemplate.Models.Enum.PostDatatypes.tunble ||
Model.Iddatatype == (byte)PTemplate.Models.Enum.PostDatatypes.imagemedium)
            {
                <img src="@Model.Pathdata" width="200" height="200" />
            }
            else if (Model.Iddatatype == (byte)PTemplate.Models.Enum.PostDatatypes.mouzik)
            {
                <audio controls>
                    <source src="@Model.Pathdata" type="audio/mpeg">
                </audio>
            }
            else if (Model.Iddatatype == (byte)PTemplate.Models.Enum.PostDatatypes.video)
            {
                <iframe src="@Model.Pathdata" allowFullScreen="true" webkitallowfullscreen="true" mozallowfullscreen="true"></iframe>
            }


            @*<img src="~/uploads/post/@Model.Pathdata" />*@
            @*@Html.DisplayFor(model => model.Pathdata)*@
        </dd>
        <dt>
       فعال
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.Isactive)*@
            @if (Model.Isactive != null)
            {
                <span>فعال</span>
                <img src="~/images/icons8-green.png" />
            }
            else
            {
                <span>  غیر فعال</span>
                <img src="~/images/icons8-silver.png" />
            }
        </dd>
        <dt>
          شرح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
         نوع پست
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IddatatypeNavigation.Name)
        </dd>
        <dt>
         پست
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdpostNavigation.Title)
        </dd>
    </dl>
</div>
<div>
    <a href="~/Admin/Postdatas/Edit/@Model.Id">ویرایش</a> |
    <a href="~/Admin/Postdatas/Index/@Model.Idpost">برگشت</a>
</div>
