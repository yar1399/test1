@model PTemplate.Data.DataBase.Postdata

@using Microsoft.AspNetCore.Identity
@using PTemplate
@using PTemplate.Models
@namespace PTemplate
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>ویرایش جدید</h2>





<p>


    @if (long.Parse(ViewData["Idpost"].ToString()) >= 1)
    {
        <a harf="~/Admin/PostdatasPo/Create/@ViewData["Idpost"]">محتوای جدید</a>
    }



</p>



<div>
    @{
        var b = (PTemplate.Data.DataBase.Post)ViewData["post"];

    }
    <h1> @b.Title</h1>
    <p> @b.Description</p>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            تاریخ
        </dt>
        <dd>
            @PersianDate.ToPersianDateString((DateTime)b.Datecreate)
            @*@Html.DisplayFor(model => model.Datecreate)*@
        </dd>
        <dt>
            وضعیت
        </dt>
        <dd>
            @b.Isactive
        </dd>

        <dt>
            زیر گروه
        </dt>
        <dd>
            @b.IdmenuNavigation.Name
        </dd>

    </dl>
</div>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Postdata</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
          مسیر
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pathdata)
        </dd>
        <dt>
           فعال
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Isactive)
        </dd>
        <dt>
          توضیح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
          نوع پست
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IddatatypeNavigation.Id)
        </dd>
        <dt>
         عنوان
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdpostNavigation.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-default" /> |
        <a href="~/Admin/PostdatasPo/Index/@Model.Id"></a>
    </form>
</div>
