@model PTemplate.Data.DataBase.Productcolor


@using PTemplate.Models
@using Microsoft.AspNetCore.Identity
@using PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "درج محصول";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Create</h2>

<h4>Productcolor</h4>
<hr />
<div class="row">


    <div>
        @{
            var b = (PTemplate.Data.DataBase.Product)ViewData["product"];
        }
        <h4>محصول : @b.Title</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                قیمت
            </dt>
            <dd>
                @b.Price
            </dd>
            <dt>
                تاریخ
            </dt>
            <dd>
                @PersianDate.ToPersianDateString((DateTime)b.Datecreate)
                @*@Html.DisplayFor(model => model.Datecreate)*@
            </dd>
            <dt>
                وضعیت
            </dt>
            <dd>
                @b.Isactive
            </dd>
            <dt>
                توضیح
            </dt>
            <dd>
                @b.Description
            </dd>
            <dt>
                زیر گروه
            </dt>
            <dd>
                @b.Id
            </dd>
            <dt>
                عنوان
            </dt>
            <dd>
                @b.Title
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <form action="~/Admin/Productcolors/Create" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
               رنگ
                <select asp-for="Idcolor" class="form-control" asp-items="ViewBag.Idcolor"></select>
            </div>
            <div class="form-group">
                @*<input type="hidden" name="Idproduct" id="Idproduct" asp-for="Idproduct" />*@
                @*<input type="hidden" asp-for="Idproduct" id="Idproduct" name="Idproduct" />*@
                <label asp-for="Idproduct" class="control-label"></label>
        <select asp-for="Idproduct" class="form-control" asp-items="ViewBag.Idproduct"></select>
            </div>
            <div class="form-group">
                تعداد
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="درج" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/Admin/Productcolors/Index">برگشت</a>
</div>

