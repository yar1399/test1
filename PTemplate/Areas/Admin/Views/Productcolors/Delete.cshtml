@model PTemplate.Data.DataBase.Productcolor

@using PTemplate.Models
@using Microsoft.AspNetCore.Identity
@using PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>حذف</h2>

<h3>ایا مایل به حذف این اطلاعات می باشید؟</h3>
<div>



    <div>
        @{
            var b = (PTemplate.Data.DataBase.Product)ViewData["product"];
        }
        <h4>محصول : @b.Title</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                قیمت
            </dt>
            <dd>
                @b.Price
            </dd>
            <dt>
                تاریخ
            </dt>
            <dd>
                @PersianDate.ToPersianDateString((DateTime)b.Datecreate)
                @*@Html.DisplayFor(model => model.Datecreate)*@
            </dd>
            <dt>
                وضعیت
            </dt>
            <dd>
                @b.Isactive
            </dd>
            <dt>
                توضیح
            </dt>
            <dd>
                @b.Description
            </dd>
            <dt>
                زیر گروه
            </dt>
            <dd>
                @b.Id
            </dd>
            <dt>
                عنوان
            </dt>
            <dd>
                @b.Title
            </dd>
        </dl>
    </div>
    <dl class="dl-horizontal">
        <dt>
           تعداد
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt>
            رنگ 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdcolorNavigation.Name)
        </dd>
        <dt>
             عنوان محصول
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdproductNavigation.Text)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-default" /> |
        <a asp-action="Index">برگشت</a>
    </form>
</div>
