@model PTemplate.Data.DB.ProductInsert

@using Microsoft.AspNetCore.Identity
@using PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "محصول جدید";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ساخت محصول جدید</h2>

<h4>محصول</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/Admin/Products/Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="Idpost" class="control-label"></label>
            <select asp-for="Idpost" class="form-control" asp-items="ViewBag.Idpost"></select>
        </div>*@
            <div class="form-group">
                 منو
                <select asp-for="Idmenu" class="form-control" asp-items="ViewBag.Idmenu"></select>
            </div>
            <div class="form-group">
                 عنوان
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                 قیمت
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                  مبلغ پست
                <input type="number" asp-for="Moneypost" class="form-control" />
                <span asp-validation-for="Moneypost" class="text-danger"></span>
            </div>

            <div class="form-group">
                 توضیح دادن
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                 متن شرح کالا
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                 فعال
                @Html.CheckBox("Isactive", true)
                @*<input type="checkbox" asp-for="Isactive" class="form-control" />*@
                @*<span asp-validation-for="Isactive" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <input type="submit" value="ساخت" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/Admin/Products/Index"> برگشت</a>
</div>

