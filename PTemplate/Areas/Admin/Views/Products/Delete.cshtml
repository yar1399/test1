@model PTemplate.Data.DataBase.Product


@using Microsoft.AspNetCore.Identity
@using PTemplate
@using PTemplate.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>حذف محصول</h2>

<h3>ایا مایل به حذف این محصول هستید?</h3>
<div class="row">
    <div class=" col-12 text-danger">
        @ViewData["messge"].ToString();
    </div>
</div>
<div>
    <h4>محصول : @Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            عنوان
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            قیمت
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            هزینه پست
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Moneypost)
        </dd>
        <dt>
            تاریخ
        </dt>
        <dd>
            @PersianDate.ToPersianDateString((DateTime)Model.Datecreate)
            @*@Html.DisplayFor(model => model.Datecreate)*@
        </dd>
        <dt>
            وضعیت
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Isactive)
        </dd>

        <dt>
            زیر گروه
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdmenuNavigation.Name)
        </dd>
        <dt>
            توضیح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            شرح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>

    <form action="~/Admin/Products/Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-default" /> |
        <a href="~/Admin/Products/Index">برگشت</a>
    </form>
</div>
