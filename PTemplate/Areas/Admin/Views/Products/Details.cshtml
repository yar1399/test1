@model PTemplate.Data.DataBase.Product

@using PTemplate.Models
@using Microsoft.AspNetCore.Identity
@using PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "اطلاعات محصول";
  Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>اطلاعات محصول</h2>

<div>
    <h4>محصول : @Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            عنوان
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            قیمت
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            هزینه پست
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Moneypost)
        </dd>
        <dt>
            تاریخ
        </dt>
        <dd>
            @PersianDate.ToPersianDateString((DateTime)Model.Datecreate)
            @*@Html.DisplayFor(model => model.Datecreate)*@
        </dd>
        <dt>
            وضعیت
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Isactive)
        </dd>

        <dt>
            زیر گروه
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdmenuNavigation.Name)
        </dd>
        <dt>
            توضیح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            شرح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
</div>
<div>
    <a href="~/Admin/Products/Edit/@Model.Id">ویرایش</a> |
    <a href="~/Admin/Products/Index">برگشت</a>
</div>
