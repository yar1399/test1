@model PTemplate.Data.DataBase.Socialweb
@using Microsoft.AspNetCore.Identity

@using PTemplate.Areas.Admin.Data
@using PTemplate.Models
@namespace PTemplate


@using PTemplate
@using PTemplate.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "اطلاعات شبکه";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>جزئیات شبکه</h2>

<div>
    <h4>شبکه</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
          نام شبکه
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdsocialNavigation.Name)
        </dd>
        <dt>
            ادرس
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt>
            فعال
        </dt>
        <dd>
            @if (Model.Isactive != null)
                @if ((Boolean)Model.Isactive)

                {
                    <span>فعال</span>
                    <img src="~/images/icons8-green.png" />
                }
                else
                {
                    <span>  غیر فعال</span>
                    <img src="~/images/icons8-silver.png" />
                }
        </dd>
        <dt>
            توضیح
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">ویرایش</a> |
    <a asp-action="Index">برگشت</a>
</div>
