@model PTemplate.Data.DataBase.AspNetUserRoles1

@using Microsoft.AspNetCore.Identity
@using PTemplate
@using PTemplate.Areas.Admin.Data
@using PTemplate.Models
@namespace PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "حذف نقش";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>حذف نقش</h2>

<h3>آیا ما به حذف نقش کاربر می باشید?</h3>
<div>
    <h4>حذ نقش کاربری</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Role.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="حذف" class="btn btn-default" /> |
        <a href="~/Admin/UserRoles/Index/@ViewData["IdUser"].ToString()">برگشت</a>
    </form>
</div>
