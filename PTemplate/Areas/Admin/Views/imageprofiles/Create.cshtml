@model PTemplate.Models.DataViewModel.UploadViewModel
@using PTemplate
@using PTemplate.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "عکس جدید پروفایل";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>عکس پروفایل جدید</h2>

<h4>عکس پروفایل</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/Admin/imageprofiles/Create" method="post" enctype="multipart/form-data">

            <div class="form-group">
                @*<label asp-for="Photo" class="control-label">عکس را انتخاب نمائید</label>*@
                <input asp-for="Photo" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="درج" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/Admin/imageprofiles/Details">برگشت</a>
</div>

