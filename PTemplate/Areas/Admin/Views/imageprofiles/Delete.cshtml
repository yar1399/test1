@model PTemplate.Data.DataBase.Imageprofile
@using PTemplate
@using PTemplate.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "حذف عکس پروفایل";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>حذف از پروفایل</h2>

<h3>شما امکان حذف داده را ندارید?</h3>
<div>
    <h4>حذف عکس</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        کاربر
        </dt>
        <dd>
        @User.Identity.Name
        </dd>
        <dt>
            عکس
        </dt>
        <dd>
            @if (Model != null)
                
            {
                <img src="~/uploads/profile/@Model.Path" />
            }
            else
            {
                <img src="~/images/account.png" />
            }

        </dd>
        <dt>
            فعال
        </dt>
        <dd>
            @if (Model != null)
                @if (Model.Isactive.Value)
                {
                    <img src="~/images/icons8-green.png" />
                }
                else
                {
                    <img src="~/images/icons8-silver.png" />
                }

        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-default" /> |
        <a href="~/Admin/imageprofiles/Index">برگشت</a>
    </form>
</div>
