    <!----------------برای فرزندم چه اسمی انتخاب کنم که رنگ دلخواهم بشه؟ -------------->
    <div class="container-fluid slided">
        <div class="container">
            <div class="content-title">
                <h3 class="h3-title color-white">یعنی برای فرزندم چه اسمی بذارم که رنگش همونی بشه که دلم میخواد؟</h3>
            </div>
            <div class="clearfix"></div>
            <div class="content-body">
                <div class="row">
                    <div class="col-md-6 col-lg-6 wow fadeInRight">

                        <input class="input-style" type="text" id="familybaby" value="" placeholder="نام خانوادگی فرزند شما">
                        <select class="input-style extra-select-style" id="colorbaby" placeholder="انتخاب رنگ">
                            <option value="0">چه رنگی مد نظرتونه؟</option>
                            <option value="1">قرمز</option>
                            <option value="2">نارنجی</option>
                            <option value="3">زرد</option>
                            <option value="4">سبز</option>
                            <option value="5">آبی</option>
                            <option value="6">نیلی</option>
                            <option value="7">بنفش</option>
                            <option value="8">صورتی</option>
                            <option value="9">طلایی</option>
                        </select>
                        <div class="container-fluid container-radio">
                            <label class="radio-inline">
                                <input type="radio" id="gender" name="optradio" value="0" checked="checked" title="دختر" />دختر
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio" value="1" title="پسر" />پسر
                            </label>
                            <div class="clearfix"></div>
                        </div>
                        <button id="btn3" onclick="startTaskbaby();">ببین چه اسم هایی این رنگی میشه <span class="lnr lnr-arrow-left"></span></button>

                        <img id="loader3" src="~/Namrang/images/loader.svg" style="display:none" />
                        <div class="clearfix"></div>

                        <div class="row product-info text-center " style="color:white;" id="messageBasebaby"></div>
                        <script>

                            function startTaskbaby() {


                                var fameli = $('#familybaby').val();
                               
                                var  gen =$('input[name="optradio"]:checked').val();

                               

                                var select = document.getElementById("colorbaby");
                                var options = select.options[select.selectedIndex];
                                var idcolor = options.value;

                                if (fameli === "") {
                                    document.getElementById("name-result").style.display = "none";
                                    document.getElementById("messageBasebaby").innerHTML = '';
                                    document.getElementById("basebaby").innerHTML = '';
                                    alert(' لطفا نام خانوادگی را انتخاب کنید ');
                                    return;
                                }

                                if (idcolor == null) {
                                    document.getElementById("name-result").style.display = "none";
                                    document.getElementById("messageBasebaby").innerHTML = '';
                                    document.getElementById("basebaby").innerHTML = '';
                                    alert(' لطفا رنگ را انتخاب کنید ');
                                    return;
                                }

                                if (idcolor == 0) {
                                    document.getElementById("name-result").style.display = "none";
                                    alert(' لطفا رنگ را انتخاب کنید ');
                                    return;
                                }



                                document.getElementById("btn3").style.display = "none";
                                document.getElementById("loader3").style.display = "inline-block";

                                $.ajax({
                                    type: 'GET',
                                    url: '/Namrang/yournamebaby?fameli=' + fameli + '&color=' + idcolor + '&gender=' + gen,
                                    contentType: "application/json",
                                    success: function (result) {
                                        document.getElementById("btn3").style.display = "inline-block";
                                        document.getElementById("loader3").style.display = "none";
                                        if (result.ts.length >= 1) {
                                            document.getElementById("name-result").style.display = "none";
                                            if (result.ts[0].name === "NO-2") {
                                                document.getElementById("basebaby").innerHTML = 'موردی یافت نکردم.';
                                                document.getElementById("messageBasebaby").innerHTML = '<span class=" text-lg-center" >' + result.ts[0].meaning + '</span>'

                                            } else if (result.ts[0].name === "NO") {
                                                document.getElementById("basebaby").innerHTML = 'موردی یافت نکردم.';
                                                document.getElementById("messageBasebaby").innerHTML = '<span class=" text-lg-center">' + result.ts[0].meaning + '</span>'

                                            } else {

                                                document.getElementById("name-result").style.display = "inline-block";
                                                var text12 = '';

                                                for (i = 0; i < result.ts.length; i++) {
                                                    text12 += '<div class="col-md-4">' +
                                                        '<p>' +
                                                        '<span class="icon lnr lnr-checkmark-circle" style="color:' + result.ts[0].color + '"></span>' +
                                                        ' <span class="name-list-item">' + result.ts[i].name + '</span>' +
                                                        ' <span> - </span>' +
                                                        ' <span>' +

                                                        result.ts[i].meaning +

                                                        '  </span' +
                                                        ' </p> </div>';




                                                }
                                                document.getElementById("messageBasebaby").innerHTML = '';
                                                document.getElementById("basebaby").innerHTML = text12;
                                            }

                                        }



                                    }, error: function (xhr, status, error) {
                                        document.getElementById("loader3").style.display = "none";
                                        document.getElementById("name-result").style.display = "none";
                                        document.getElementById("btn3").style.display = "inline-block";
                                    }
                                });

                            }

                        </script>


                    </div>
                    <div class="col-md-6 col-lg-6 color-white wow fadeInLeft">
                        <p class="text-justify"></p>
                    </div>
                </div>
            </div>
