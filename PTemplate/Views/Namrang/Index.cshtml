    <div class="container-fluid p-t-20 bgcolor-white" id="second-form">
        <div class="container">
            <div class="content-title">
                <h3 class="h3-title color-magenta">ویژگی های شخصیتی این رنگ چی میشه؟</h3>
            </div>
            <div class="clearfix"></div>
            <div class="content-body">
                <div class="row">
                    <div class="col-md-6 col-lg-6 wow fadeInRight">


                        <select class="input-style extra-select-style" id="color" placeholder="انتخاب رنگ">
                            <option value="0">چه رنگی مد نظرتونه؟</option>
                            <option value="1">قرمز</option>
                            <option value="2">نارنجی</option>
                            <option value="3">زرد</option>
                            <option value="4">سبز</option>
                            <option value="5">آبی</option>
                            <option value="6">نیلی</option>
                            <option value="7">بنفش</option>
                            <option value="8">صورتی</option>
                            <option value="9">طلایی</option>
                        </select>


                        <button id="btn2" onclick="startTaskrang()">  ببین چی میشه  <span class="lnr lnr-arrow-left"></span></button>

                  

                        <img id="loader2" src="~/Namrang/images/loader.svg" style="display:none" />
                        <div class="clearfix"></div>

                        <div class="row product-info text-center" id="messageBasecolor"></div>

                        <script>
                           

                            function startTaskrang() {

                           

                                var select = document.getElementById("color");
                                var options = select.options[select.selectedIndex];
                                var idcolor = options.value;

                                if (idcolor == null) {
                                    document.getElementById("messageBasecolor").innerHTML = '';
                                    document.getElementById("colordiscription").innerHTML = ''; 
                                    alert(' لطفا رنگ را انتخاب کنید ');
                                    return;
                                }

                                if (idcolor == 0) {
                                    document.getElementById("messageBasecolor").innerHTML = '';
                                    document.getElementById("colordiscription").innerHTML = ''; 
                                    alert(' لطفا رنگ را انتخاب کنید ');
                                    return;
                                }
                                document.getElementById("btn2").style.visibility = "none";
                                document.getElementById("loader2").style.visibility = "inline-block";

                                $.ajax({
                                    type: 'GET',
                                    url: '/Namrang/yourDescriptionColor?id=' + idcolor,
                                    contentType: "application/json",
                                    success: function (result) {
                                        document.getElementById("btn2").style.display = "inline-block";
                                        document.getElementById("loader2").style.visibility = "none";
                                        if (result.ts.length == 1) {
                                            if (result.ts[0].name === "NO-2") {
                                                document.getElementById("colordiscription").innerHTML = '  <p  class="text-justify"> موردی را جستجو کنید </p>';
                                                document.getElementById("messageBasecolor").innerHTML = ' <span class="text-danger text-lg-center">' + result.ts[0].description + '</span>';

                                            } else if (result.ts[0].name === "NO") {

                                                document.getElementById("messageBasecolor").innerHTML = ' <span class="text-danger text-lg-center">' + result.ts[0].description + '</span>';
                                                document.getElementById("colordiscription").innerHTML = '  <p  class="text-justify"> موردی را جستجو کنید </p>';
                                            } else {
                                                document.getElementById("messageBasecolor").innerHTML = '';
                                                document.getElementById("colordiscription").innerHTML = '  <p  class="text-justify"><span style="color:' + result.ts[0].color + '">' + result.ts[0].name + ':&nbsp;</span>' + result.ts[0].description + '</p>';
                                            }

                                        }


                                    },
                                    error: function (xhr, status, error) {
                                        document.getElementById("loader2").style.visibility = "none";
                                        document.getElementById("btn2").style.display = "inline-block";
                                    }
                                });

                            }

                        </script>



                    </div>
                    <div id="colordiscription" class="col-md-6 col-lg-6  wow fadeInLeft">
                        <p class="text-justify">
                            <!--------نتیجه اینجا نوشته میشه------>
