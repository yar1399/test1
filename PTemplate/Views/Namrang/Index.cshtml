                                        document.getElementById("loader1").style.display = "none";
                                        if (result.ts.length == 1) {
                                            if (result.ts[0].colorname === "NO-2") {
                                                document.getElementById("responnamerang").innerHTML = '  <p  class="text-justify">                            روان‌شناسان می‌گویند همه ما به نحوی تحت‌تاثیر رنگ‌ها هستیم و به عبارت دیگر (خود) واقعی‌مان را با این رنگ‌ها نشان می‌دهیم. برای اسم هر فرد رنگ مخصوصی وجود دارد که می‌تواند بر زندگی او تاثیر بگذارد. جالب است نه؟! این‌که شما بدانید برای اسم‌تان رنگ مخصوصی وجود دارد و می‌توانید راز شخصیتی خود را از لابه‌لای آن دریابید! باید بسیار جالب و هیجان‌انگیز باشد... (برگرفته از خبر گزاری ایسنا).</p>';
                                                document.getElementById("messageBase").innerHTML = ' <span class=" text-lg-center">' + result.ts[0].description + '</span>'

                                            } else if (result.ts[0].colorname === "NO") {
                                                document.getElementById("responnamerang").innerHTML = '  <p  class="text-justify">                            روان‌شناسان می‌گویند همه ما به نحوی تحت‌تاثیر رنگ‌ها هستیم و به عبارت دیگر (خود) واقعی‌مان را با این رنگ‌ها نشان می‌دهیم. برای اسم هر فرد رنگ مخصوصی وجود دارد که می‌تواند بر زندگی او تاثیر بگذارد. جالب است نه؟! این‌که شما بدانید برای اسم‌تان رنگ مخصوصی وجود دارد و می‌توانید راز شخصیتی خود را از لابه‌لای آن دریابید! باید بسیار جالب و هیجان‌انگیز باشد... (برگرفته از خبر گزاری ایسنا).</p>';
                                                document.getElementById("messageBase").innerHTML = ' <span class=" text-lg-center">' + result.ts[0].description + '</span>'

