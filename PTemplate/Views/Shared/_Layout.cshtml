<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> @ViewData["Title"]</title>

    <environment include="Development">

    </environment>

    <environment exclude="Development">

    </environment>

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Raleway:500,600,700,800,900,400,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900,300italic,400italic' rel='stylesheet' type='text/css'>
    
    <!-- Bootstrap -->
    <link href="~/Bita/css/bootstrap.min.css" rel="stylesheet">

    <!-- Owl Carousel Assets -->
    <link href="~/Bita/css/owl.carousel.css" rel="stylesheet">
    <link href="~/Bita/css/owl.theme.css" rel="stylesheet">


    <!-- Pixeden Icon Font -->
    <link rel="stylesheet" href="~/Bita/css/Pe-icon-7-stroke.css">

    <!-- Font Awesome -->
    <link href="~/Bita/css/font-awesome.min.css" rel="stylesheet">


    <!-- PrettyPhoto -->
    <link href="~/Bita/css/prettyPhoto.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

    <!-- Style -->
    <link href="~/Bita/css/style.css" rel="stylesheet">
    <link href="~/Bita/css/util.css" rel="stylesheet">

    <link href="~/Bita/css/animate.css" rel="stylesheet">
    <!-- Responsive CSS -->
    <link href="~/Bita/css/responsive.css" rel="stylesheet">
    <!--ترجمه شده توسط مرجع تخصصی برنامه نویسان-->
</head>

<body>
    <div class="main-container">
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">
                                تعویض ناوبری
                            </span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">
                            <img src="~/Bita/images/yaran_logo_64.png" alt="Logo">
                        </a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <!-- NAV -->

                            <li><a href="@ViewData["homeUrl"]#HOME">صفحه اصلی</a> </li>
                            <li><a href="@ViewData["homeUrl"]#FEATURES">درباره فراخوان</a></li>
                            <li><a href="/Home/policy">شرایط شرکت در فراخوان</a></li>
                            <li><a href="@ViewData["homeUrl"]#DOWNLOAD">دانلود فرم داستان نویسی </a> </li>
                            <li><a href="/Bitafiles/Index">ارسال داستان</a></li>
                            <li><a href="/Home/about">درباره ما</a></li>
                            <li><a href="/Home/contact">تماس با ما</a></li>

                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container- -->
            </nav>
        </header>
        <section-content>
            @RenderBody()
        </section-content>


        <!-- =========================
         FOOTER
    ============================== -->

        <footer>
            <h2></h2>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="footer_text">
                            <!-- COPYRIGHT TEXT -->
                            <p>
                                <span>کلیه حقوق مادی و معنوی فراخوان و وبسایت متعلق به </span>
                                <a href="http://www.yarsoft.ir/" target="_blank">شرکت نرم افزاری یاران صفر و یک جهان گستر </a>
                                <span>میباشد.</span>
                                <span style="text-align:left">Copyright 2019</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">

                    </div>
                </div>
            </div>
        </footer>
        <!-- END FOOTER -->
    </div>

    <environment include="Development">
        <script src="~/Bita/js/jquery.min.js"></script>
        <script src="~/Bita/js/bootstrap.min.js"></script>
        <script src="~/Bita/js/owl.carousel.js"></script>
        <script src="~/Bita/js/jquery.fitvids.js"></script>
        <script src="~/Bita/js/smoothscroll.js"></script>
        <script src="~/Bita/js/jquery.parallax-1.1.3.js"></script>
        <script src="~/Bita/js/jquery.prettyPhoto.js"></script>
        <script src="~/Bita/js/jquery.ajaxchimp.min.js"></script>
        <script src="~/Bita/js/jquery.ajaxchimp.langs.js"></script>
        <script src="~/Bita/js/wow.min.js"></script>
        <script src="~/Bita/js/waypoints.min.js"></script>
        <script src="~/Bita/js/jquery.counterup.min.js"></script>
        <script src="~/Bita/js/script.js"></script>
    </environment>
    <environment exclude="Development">

    </environment>


    @RenderSection("Scripts", required: false)
</body>
</html>
