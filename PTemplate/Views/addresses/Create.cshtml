@model PTemplate.Data.DataBase.Productaddress


@using Microsoft.AspNetCore.Identity
@using PTemplate
@using PTemplate.Areas.Admin.Data
@using PTemplate.Models
@namespace PTemplate

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "آدرس شما";
    Layout = "~/Views/cbkala/Shared/personmanger.cshtml";
    ViewData["externalHomeUrl"] = "/cbkala/";
    ViewData["HomeUrl"] = "/";
    ViewData["title-icon"] = "fa-map-marker";
}



<div id="container">
    <div class="container">
        <div class="text-center text-info">
            @ViewData["address"].ToString()
        </div>
        <div class="row">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Iduser" id="Iduser" name="Iduser" />
                            @*<label asp-for="Iduser" class="control-label"></label>
                                <select asp-for="Iduser" class="form-control" asp-items="ViewBag.Iduser"></select>*@
                        </div>
                        <div class="form-group">
                            <label asp-for="Namefamily" class="control-label">نام و نام خانوادگی</label>
                            <input asp-for="Namefamily" class="form-control" />
                            <span asp-validation-for="Namefamily" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tell" class="control-label">شماره تماس</label>
                            <input type="tel" asp-for="Tell" class="form-control" />
                            <span asp-validation-for="Tell" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">آدرس</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="control-label">شهر</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Province" class="control-label">استان</label>
                            <input asp-for="Province" class="form-control" />
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Postalcode" class="control-label">کد پستی</label>
                            <input asp-for="Postalcode" lang="10" class="form-control" />
                            <span asp-validation-for="Postalcode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="ثبت آدرس شما" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">برو به لیست آدرس های من</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
