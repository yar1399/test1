                                <div class="item"> <a href="#"><img class="img-responsive" src="/cbkala/image/slider/banner-3-750x400.jpg" alt="banner 3" /></a></div>
                                <div class="item"> <a href="#"><img class="img-responsive" src="/cbkala/image/slider/banner-2-750x400.jpg" alt="banner 2" /></a></div>
                            }



