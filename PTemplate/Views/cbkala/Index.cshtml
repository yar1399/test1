                                          </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <!-- Slideshow Start-->
                        <div class="slideshow single-slider owl-carousel">
                            @if (Model.Sliders != null)
                            {
                                if (Model.Sliders.Count >= 1)
                                {
                                    @foreach (var i in Model.Sliders)
                                    {
                                        <div class="item">
                                            <a href="/cbkala/Product/@i.idproduct">
                                                <img class="img-responsive" src="~/uploads/product/@i.pathdata" alt="@i.title" />
                                            </a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="item"> <a href="#"><img class="img-responsive" src="/cbkala/image/slider/banner-1-750x400.jpg" alt="banner 3" /></a></div>
                                    <div class="item"> <a href="#"><img class="img-responsive" src="/cbkala/image/slider/banner-2-750x400.jpg" alt="banner 3" /></a></div>
                                }
                            }
                            else
