                                @{
                                    @if (Model.biner != null)
                                    {
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> 
                                            <a href="/cbkala/Product/@Model.biner.idproduct">
                                            <img title="@Model.biner.title" alt="sample-banner1" src="~/uploads/product/@Model.biner.pathdata">
