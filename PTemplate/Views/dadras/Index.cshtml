@model PTemplate.Models.DataViewModel.MaindadarasViewModel
@namespace PTemplate.Areas.Admin.Data
@using PTemplate.Data.DataBase


@{
    ViewData["Title"] = "خانه";
    Layout = "~/Views/dadras/Shared/_MainHome.cshtml";
    ViewData["homeUrl"] = "";
    ViewData["externalHomeUrl"] = "/dadras/singlepost/";
}

@using PTemplate.Data;
@using PTemplate.Data.DataBase;
@using System.Security.Claims;
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.EntityFrameworkCore;



@using PTemplate
@using PTemplate.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{


    ApplicationDbContext appA = new
        ApplicationDbContext(new Microsoft.EntityFrameworkCore.DbContextOptions<ApplicationDbContext>());

    var Ad = appA.Ads
        .Where(b => b.Datestart.Value.Date <= DateTime.Now  && b.Datestart.Value.Date <= DateTime.Now && b.Isactive == true)
        .ToList();




}


<!-- ##### Slider Area Start ##### -->
<div class="hero-area owl-carousel">

    @if (Model.menugroup != null)
    {
        foreach (var i in Model.ListPostTopSlide)
        {

            @*@ViewData["externalHomeUrl"]img / bg - img / slider / 1.jpg*@
            <div class="hero-blog-post bg-img bg-overlay" style="background-image: url(@i.Pathdata);">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12">
                            <!-- Post Contetnt -->
                            <div class="post-content text-center">
                                <div class="post-meta" data-animation="fadeInUp" data-delay="100ms">
                                    <a href="@ViewData["externalHomeUrl"]@i.Id">@i.Title</a>
                                </div>
                                <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title" data-animation="fadeInUp" data-delay="300ms">
                                    @i.Description
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }






</div>




<!-- >>>>>>>>>>>>>>>>>>>> Post Left Sidebar Area <<<<<<<<<<<<<<<<<<<<< -->

<div class="post-sidebar-area left-sidebar mt-30 mb-30 bg-white box-shadow">



    <!-- Sidebar Widget -->
    <div class="single-sidebar-widget">
        @{
            foreach (var i in Ad)
            {
                <a href="@(i.Link)" class="add-img" >
                     <img src="@(i.Path)" alt="" style="margin-bottom:5px;">
                </a>
                
            }

        }
    </div>

    <!-- Sidebar Widget -->
    <div class="single-sidebar-widget p-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>آهنگ های انگیزشی</h5>
        </div>


        @{


            @foreach (var i in Model.ListPostMusic)
            {
                <!-- Single Blog Post -->
                <div class="single-blog-post d-flex">
                    <div class="post-thumbnail">
                        <img src="@i.Pathdata" alt="@i.Title">
                    </div>
                    <div class="post-content">
                        <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title">@i.Title</a>

                        <div class="post-meta d-flex justify-content-between">
                            @*<a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ?</a>*@
                            @*<a href="@ViewData["externalHomeUrl"]archive?Idmenu=@i.Idmenu&paging=1"><i class="fa info" aria-hidden="true"></i> @i.IdmenuNavigation.Name</a>*@
                            @* <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 14</a>*@
                        </div>
                    </div>
                </div>

            }


        }



    </div>



</div>



<!--   >>>>>>>>>>>>>>>>>>> Main Posts Area <<<<<<<<<<<<<<<<<<<<< -->

<div class="mag-posts-content mt-30 mb-30 p-30 box-shadow">

    <!-- Trending Now Posts Area -->
    <div class="trending-now-posts mb-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>آخرین خبرها</h5>
        </div>

        <div class="trending-post-slides owl-carousel">
            @foreach (var i in Model.ListPost)
            {
                <div class="single-trending-post">
                    <img src="@i.Pathdata" alt="@i.Title">
                    <div class="post-content">
                        <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-cata">@i.Title</a>
                        @*<a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title">@i.Description</a>*@
                    </div>
                </div>
            }

        </div>
    </div>

    <!-- Sports Videos -->
    <div class="sports-videos-area">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>تکه ای از دانایی</h5>
        </div>



        <div class="row">

            @foreach (var i in Model.ListPost)
            {
                <!-- Single Blog Post -->
                <div class="col-12 col-lg-6">
                    <div class="col-12 single-blog-post d-flex style-3 mb-30">
                        <div class="col-4 post-thumbnail">
                            <img src="@i.Pathdata" alt="@i.Title">
                        </div>
                        <div class="col-8 post-content">
                            <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title">@i.Title</a>
                            <div class="post-meta d-flex">
                                @*<a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ? </a>*@
                                @*<a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>

    <!-- Feature Video Posts Area -->
    <div class="feature-video-posts mb-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>آخرین ویدیوها</h5>
        </div>





        <div class="featured-video-posts">
            <div class="row">
                <div class="col-12 col-lg-7">



                    <!-- Single Featured Post -->




                    @{
                        Post post = Model.ListPostVideo.FirstOrDefault();
                        if (post != null)
                        {
                            <div class="single-featured-post">
                                <!-- Thumbnail -->
                                <div class="post-thumbnail mb-50">
                                    <img src="@post.Pathdata" alt="@post.Title">
                                    <a href="@ViewData["externalHomeUrl"]@post.Id " class="video-play"><i class="fa fa-play"></i></a>
                                </div>
                                <!-- Post Contetnt -->
                                <div class="post-content">
                                    <div class="post-meta">
                                        <a href="#">@PTemplate.Models.PersianDate.ToPersianDateString((DateTime)post.Datecreate)</a>
                                        @*<a href="@ViewData["externalHomeUrl"]@post.Id">@post.IdmenuNavigation.Name </a>*@
                                    </div>
                                    <a href="@ViewData["externalHomeUrl"]@post.Id" class="post-title">@post.Title</a>
                                    <p>
                                        @post.Description
                                    </p>
                                </div>
                                <!-- Post Share Area -->
                                <div class="post-share-area d-flex align-items-center justify-content-between">
                                    <!-- Post Meta -->
                                    <div class="post-meta pl-3">
                                        @*<a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ?</a>*@
                                        @*<a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>*@
                                    </div>
                                    <!-- Share Info -->
                                    <div class="see-more">
                                        <a href="@ViewData["externalHomeUrl"]@post.Id">نمایش کامل محتوی</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="single-featured-post">
                                <!-- Thumbnail -->
                                <div class="post-thumbnail mb-50">
                                    <img src="~/dadras/img/bg-img/add3.jpg" alt="">
                                    <a href="@ViewData["externalHomeUrl"]singlevideo" class="video-play"><i class="fa fa-play"></i></a>
                                </div>
                                <!-- Post Contetnt -->
                                <div class="post-content">
                                    <div class="post-meta">
                                        <a href="#">1398/09/30</a>
                                        <a href="@ViewData["externalHomeUrl"]archive">اغاز به کار سامانه من دادرس</a>
                                    </div>
                                    <a href="@ViewData["externalHomeUrl"]singlevideo" class="post-title">من برای شما بهترین را از خدا می خوام.</a>
                                    <p>
                                        ....
                                    </p>
                                </div>
                                <!-- Post Share Area -->
                                <div class="post-share-area d-flex align-items-center justify-content-between">
                                    <!-- Post Meta -->
                                    <div class="post-meta pl-3">

                                        @*<a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ؟ </a>
                                        <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> ؟ </a>
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> ؟ </a>*@

                                    </div>
                                    <!-- Share Info -->
                                    <div class="see-more">
                                        <a href="@ViewData["externalHomeUrl"]archive">نمایش کامل محتوی</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="col-12 col-lg-5">
                    <!-- Featured Video Posts Slide -->
                    <div class="featured-video-posts-slide owl-carousel">

                        @{

                            for (int i = 0; i < Model.ListPostVideo.Count<Post>(); i++)
                            {

                                if (i == 0 || i == 4 || i == 8)
                                {
                                    @Html.Raw(" <div class=\"single--slide\">");
                                }

                                <!-- Single Blog Post -->
                                <div class="col-12 single-blog-post d-flex style-3">
                                    <div class="col-4 post-thumbnail">
                                        <img src="@Model.ListPostVideo[i].Pathdata" alt="@Model.ListPostVideo[i].Title">
                                    </div>
                                    <div class="col-8 post-content">
                                        <a href="@ViewData["externalHomeUrl"]@Model.ListPostVideo[i].Id" class="post-title">@Model.ListPostVideo[i].Title</a>
                                        <div class="post-meta d-flex">
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ?</a>
                                            @*<a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                                                <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>*@
                                        </div>
                                    </div>
                                </div>

                                if (i == 3 || i == 7 || i == 11 || i == Model.ListPostVideo.Count<Post>() - 1)
                                {
                                    @Html.Raw("</div>");
                                }
                            }

                        }



                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Most Viewed Videos -->
    <div class="most-viewed-videos mb-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>آخرین پادکست های صوتی</h5>
        </div>




        <div class="most-viewed-videos-slide owl-carousel">

            @if (Model.ListPostpadkast != null)
            {
                @foreach (var i in Model.ListPostpadkast)
                {
                    <!-- Single Blog Post -->
                    <div class="single-blog-post style-4">
                        <div class="post-thumbnail">
                            <img src="@i.Pathdata" alt="@i.Title">
                            <a href="@ViewData["externalHomeUrl"]@i.Id" class="video-play"><i class="fa fa-play"></i></a>
                            <span class="video-duration">..:..</span>
                        </div>
                        <div class="post-content">
                            <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title">@i.Title</a>
                            <div class="post-meta d-flex">
                                @*<a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ? </a>*@
                                @*<a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>*@
                            </div>
                        </div>
                    </div>
                }
            }



        </div>
    </div>

    <!-- Sports Videos -->
    <div class="sports-videos-area">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>آخرین عکس نوشته ها</h5>
        </div>

        <div class="sports-videos-slides owl-carousel mb-30">

            @foreach (var i in Model.ListPostImageText)
            {
                <div class="single-featured-post">
                    <!-- Thumbnail -->
                    <div class="post-thumbnail mb-50">
                        <img src="@i.Pathdata" alt="@i.Title">
                        <a href="@ViewData["externalHomeUrl"]@i.Id"></a>
                    </div>
                    <!-- Post Contetnt -->
                    <div class="post-content">
                        <div class="post-meta">
                            <a href="@ViewData["externalHomeUrl"]@i.Id">@PersianDate.ToPersianDate((DateTime)i.Datecreate)</a>
                            @*<a href="@ViewData["externalHomeUrl"]archive">@i.IdmenuNavigation.Name</a>*@
                        </div>
                        <a href="@ViewData["externalHomeUrl"]@i.Id" class="post-title">@i.Title</a>
                        <p>
                            @i.Description
                        </p>
                    </div>
                    <!-- Post Share Area -->
                    <div class="post-share-area d-flex align-items-center justify-content-between">
                        <!-- Post Meta -->
                        <div class="post-meta pl-3">
                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> ?</a>
                            @*<a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                                <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>*@
                        </div>
                        <!-- See More -->
                        <div class="see-more">
                            <a href="@ViewData["externalHomeUrl"]@i.Id">نمایش کامل محتوی</a>
                        </div>
                    </div>
                </div>
            }

        </div>


    </div>

</div>

</div>




