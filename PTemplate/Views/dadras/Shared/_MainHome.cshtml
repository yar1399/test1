@{
    Layout = "~/Views/dadras/Shared/_Layout.cshtml";
    ViewData["homeUrl"] = "";
    ViewData["externalHomeUrl"] = "/dadras/";
}

@using PTemplate.Data;
@using PTemplate.Data.DataBase;
@using System.Security.Claims;
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.EntityFrameworkCore;



@using PTemplate
@using PTemplate.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{
    ApplicationDbContext appA = new
        ApplicationDbContext(new Microsoft.EntityFrameworkCore.DbContextOptions<ApplicationDbContext>());

    var adress = appA.Addresssystems.FirstOrDefault();

    var pro = appA.Menugroups.Where(b => b.Istype == false && b.Isactive == true).ToList();

}

<!---------------------------Start Home Body------------------------------------->
<section class="mag-posts-area d-flex flex-wrap">



    @RenderBody()
    @RenderSection("Scripts", required: false)

    <!-- >>>>>>>>>>>>>>>>>>>>
     Post Right Sidebar Area
    <<<<<<<<<<<<<<<<<<<<< -->
    <!--------------------------End Home Body -------------------------------------->

    <div class="post-sidebar-area right-sidebar mt-30 mb-30 bg-white box-shadow">

        <!-- Sidebar Widget -->
        <div class="single-sidebar-widget p-30">

            <!-- Section Title -->
            <div class="section-heading">
                <h5>ما در رسانه های دیگر</h5>
            </div>

            <!-- Social Followers Info -->
            <div class="social-followers-info">
                <!-- Instagram -->
                <a href="https://www.instagram.com/mandadras/" class="instagram-following"><i class="fa fa-instagram"></i><span>ما در اینستاگرام</span></a>
                <!-- Telegram -->
                <a href="https://t.me/mandadras" class="telegram-following"><i class="fa fa-telegram"></i><span>ما در تلگرام</span></a>
                <!-- Aparat -->
                <a href="https://www.aparat.com/Maryam.Dadras" class="aparat-following"><img class="icon" src="~/dadras/img/core-img/aparat_48.png"><span>ما در آپارات</span></a>
              
            </div>

        </div>

        <!-- Sidebar Widget -->
        <div class="single-sidebar-widget p-30">
            <!-- Section Title -->
            <div class="section-heading">
                <h5>آرشیو تکیه ای از دانایی</h5>
            </div>

            <!-- Catagory Widget -->


            <ul class="catagory-widgets rtl">

                @foreach (var i in pro)
                {

                    i.Menus = @appA.Menus.AsEnumerable().Where(m => (long)m.Idmenugroup == (long)i.Id && m.Isactive == true).ToList();
                    if (@i.Menus.Count >= 0)
                    {



                            @foreach (var j in i.Menus)
                            {
                                <li><a href="@ViewData["externalHomeUrl"]archive?Idmenu=@(j.Id)&paging=1"><span><i class="fa fa-angle-double-left" aria-hidden="true"></i> @(j.Name)</span> @*<span>0</span>*@</a></li>
                            }

                     
                    }

                }
             

            </ul>
        </div>

    </div>
    <!-- ##### Slider Area End ##### -->
</section>