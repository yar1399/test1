
@namespace System.Web.WebPages
@model PTemplate.Models.DataViewModel.singlepostViewModel


@{

    ViewData["Title"] = Model.post.Title;
    Layout = "~/Views/dadras/Shared/_MainPostPages.cshtml";
    ViewData["externalHomeUrl"] = "/dadras/";

}

@section posttitle{
    <h1 class="text-white">@ViewData["titlepost"].ToString()</h1>
}


@section sitmapplaceholder{
    <div class="mag-breadcrumb py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb rtl">
                            <li class="breadcrumb-item"><a href="@ViewData["externalHomeUrl"]"><i class="fa fa-home" aria-hidden="true"></i> خانه</a></li>
                            <li class="breadcrumb-item"><a href="@ViewData["externalHomeUrl"]archive?Idmenu= @Model.post.Idmenu&paging=1"><i class="fa " aria-hidden="true"></i> آرشیو</a></li>
                            @if (Model.post.Title != null)
                            {
                                <li class="breadcrumb-item"><a href="@ViewData["externalHomeUrl"]singlepost?id= @Model.post.Id&paging=1">  @Model.post.Title</a></li>
                            }
                            else
                            {
                                <li class="breadcrumb-item"><a href="@ViewData["externalHomeUrl"]archive?Idmenu= 0&paging=1"> همه تکیه های دانایی</a></li>
                            }

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}


